<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiERP.DashboardPage"
             Title="Dashboard"
             BackgroundColor="{StaticResource Background}">
    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="16">

                <!-- Header -->
                <Label Text="Welcome, User!" Style="{StaticResource HeaderLabel}" />

                <!-- KPI Cards -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
                    <Frame Grid.Column="0" Style="{StaticResource CardView}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Monthly Sales" Style="{StaticResource CaptionLabel}" />
                            <Label Text="$12,450" Style="{StaticResource BodyLabel}" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Column="1" Style="{StaticResource CardView}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Open Orders" Style="{StaticResource CaptionLabel}" />
                            <Label Text="24" Style="{StaticResource BodyLabel}" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Frame>
                    <Frame Grid.Column="2" Style="{StaticResource CardView}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Pending Tasks" Style="{StaticResource CaptionLabel}" />
                            <Label Text="8" Style="{StaticResource BodyLabel}" FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Recent Items Header -->
                <Label Text="Recent Items" Style="{StaticResource HeaderLabel}" Margin="0,20,0,0"/>

                <!-- Recent Items List -->
                <CollectionView>
                    <CollectionView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Invoice #INV-001</x:String>
                            <x:String>Order #ORD-002</x:String>
                            <x:String>Task #TSK-003</x:String>
                        </x:Array>
                    </CollectionView.ItemsSource>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{StaticResource CardView}" Padding="10" Margin="0,0,0,10">
                                <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10">
                                    <Label Grid.Column="0" Text="{Binding .}" Style="{StaticResource BodyLabel}" VerticalOptions="Center"/>
                                    <Label Grid.Column="1" Text="Oct 29, 2025" Style="{StaticResource CaptionLabel}" VerticalOptions="Center"/>
                                    <Label Grid.Column="2" Text="Pending" TextColor="{StaticResource Warning}" Style="{StaticResource CaptionLabel}" VerticalOptions="Center"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Action Button -->
        <Button Text="+ New"
                WidthRequest="100"
                HeightRequest="56"
                CornerRadius="28"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="16" />
    </Grid>
</ContentPage>
