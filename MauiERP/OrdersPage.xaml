<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiERP.OrdersPage"
             Title="Orders"
             BackgroundColor="{StaticResource Background}">
    <VerticalStackLayout Spacing="10" Padding="16">

        <!-- Search and Filter -->
        <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
            <SearchBar Grid.Column="0" Placeholder="Search..." />
            <Button Grid.Column="1" Text="Filter" WidthRequest="80" />
        </Grid>

        <!-- Item List -->
        <CollectionView>
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Order #ORD-001</x:String>
                    <x:String>Order #ORD-002</x:String>
                    <x:String>Order #ORD-003</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Style="{StaticResource CardView}" Padding="10" Margin="0,0,0,10">
                        <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="10">
                            <!-- Status Indicator -->
                            <BoxView Grid.Column="0" Color="{StaticResource Success}" WidthRequest="10" HeightRequest="10" CornerRadius="5" VerticalOptions="Center" />

                            <!-- Item Details -->
                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="{Binding .}" Style="{StaticResource BodyLabel}" FontAttributes="Bold" />
                                <Label Text="Customer: Acme Corp" Style="{StaticResource CaptionLabel}" />
                                <Label Text="Total: $1,500.00" Style="{StaticResource CaptionLabel}" />
                            </VerticalStackLayout>

                            <!-- Chevron -->
                            <Label Grid.Column="2" Text=">" Style="{StaticResource BodyLabel}" VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
