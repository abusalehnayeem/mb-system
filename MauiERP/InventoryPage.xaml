<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiERP.InventoryPage"
             Title="Add New Item"
             BackgroundColor="{StaticResource Background}">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="16">

            <!-- Form Header -->
            <Label Text="Item Information" Style="{StaticResource HeaderLabel}" />

            <!-- Entry Field 1 -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Item Name" Style="{StaticResource InputLabel}" />
                <Frame Style="{StaticResource CardView}" Padding="0" HasShadow="False" BorderColor="LightGray">
                     <Entry Placeholder="Enter item name" />
                </Frame>
            </VerticalStackLayout>

            <!-- Entry Field 2 -->
            <VerticalStackLayout Spacing="8">
                <Label Text="SKU" Style="{StaticResource InputLabel}" />
                 <Frame Style="{StaticResource CardView}" Padding="0" HasShadow="False" BorderColor="LightGray">
                    <Entry Placeholder="Enter SKU" />
                </Frame>
            </VerticalStackLayout>

            <!-- Picker -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Category" Style="{StaticResource InputLabel}" />
                <Frame Style="{StaticResource CardView}" Padding="0" HasShadow="False" BorderColor="LightGray">
                    <Picker Title="Select a category">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Category 1</x:String>
                                <x:String>Category 2</x:String>
                                <x:String>Category 3</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                </Frame>
            </VerticalStackLayout>

            <!-- Barcode Scanner -->
            <Button Text="Scan Barcode" ImageSource="camera_icon.png" HorizontalOptions="Start" />

            <!-- Form Actions -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0" Text="Submit" />
                <Button Grid.Column="1" Text="Cancel" BackgroundColor="{StaticResource TextSecondary}" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
