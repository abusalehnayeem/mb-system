<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiERP.OrderDetailPage"
             Title="Order Details"
             BackgroundColor="{StaticResource Background}">
    <Grid RowDefinitions="*, Auto">

        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20" Padding="16">

                <!-- Header -->
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Order Details" Style="{StaticResource HeaderLabel}" />
                    <Frame BackgroundColor="{StaticResource Primary}" CornerRadius="12" Padding="8,4">
                        <Label Text="#ORD-001" TextColor="{StaticResource Secondary}" FontSize="12" />
                    </Frame>
                </HorizontalStackLayout>

                <!-- Section 1 -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Details" Style="{StaticResource InputLabel}" />
                    <Frame Style="{StaticResource CardView}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Customer: Acme Corp" Style="{StaticResource BodyLabel}" />
                            <Label Text="Order Date: Oct 29, 2025" Style="{StaticResource BodyLabel}" />
                            <Label Text="Status: Shipped" Style="{StaticResource BodyLabel}" />
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Section 2 -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Items" Style="{StaticResource InputLabel}" />
                    <Frame Style="{StaticResource CardView}">
                        <Label Text="Item 1, Item 2, Item 3"
                               Style="{StaticResource BodyLabel}" />
                    </Frame>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Sticky Footer -->
        <Border Grid.Row="1" StrokeThickness="0" Padding="16" BackgroundColor="White">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,-10" Opacity="0.1" />
            </Border.Shadow>
            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                <Button Grid.Column="0" Text="Track Shipment" />
                <Button Grid.Column="1" Text="..." WidthRequest="56" />
            </Grid>
        </Border>

    </Grid>
</ContentPage>