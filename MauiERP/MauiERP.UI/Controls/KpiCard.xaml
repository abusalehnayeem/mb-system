<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="MauiERP.UI.Controls.KpiCard"
 Padding="12">
 <Frame CornerRadius="8" HasShadow="False" BackgroundColor="{StaticResource White}" Padding="{StaticResource CardPadding}">
 <VerticalStackLayout Spacing="4">
 <Label x:Name="TitleLabel" Style="{StaticResource SmallLabel}" />
 <Label x:Name="ValueLabel" Style="{StaticResource HeaderLabel}" />
 <Label x:Name="SubtitleLabel" Style="{StaticResource BodyLabel}" />
 </VerticalStackLayout>
 </Frame>
</ContentView>