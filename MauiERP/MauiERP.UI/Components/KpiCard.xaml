<?xml version="1.0" encoding="UTF-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiERP.UI.Components.KpiCard">
    <Frame Style="{StaticResource CardView}" AutomationId="KpiCard">
        <VerticalStackLayout>
            <Label Text="{Binding Title}" Style="{StaticResource SubheaderLabel}" SemanticProperties.HeadingLevel="Level2" />
            <Label Text="{Binding Value}" Style="{StaticResource HeaderLabel}" SemanticProperties.HeadingLevel="Level1" />
            <Label Text="{Binding Subtitle}" Style="{StaticResource SmallLabel}" />
        </VerticalStackLayout>
    </Frame>
</ContentView>