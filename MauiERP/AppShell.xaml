<Shell
    x:Class="MauiERP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiERP"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiERP">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Route="DashboardPage" />
        <ShellContent
            Title="Orders"
            ContentTemplate="{DataTemplate local:OrdersPage}"
            Route="OrdersPage" />
        <ShellContent
            Title="Tasks"
            ContentTemplate="{DataTemplate local:TasksPage}"
            Route="TasksPage" />
        <ShellContent
            Title="Inventory"
            ContentTemplate="{DataTemplate local:InventoryPage}"
            Route="InventoryPage" />
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage" />
    </TabBar>

</Shell>
